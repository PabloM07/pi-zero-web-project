{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug local (x86)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server/",
      "env": {
        "GIN_MODE": "debug"
      }
    },
    {
      "name": "Attach to Pi Zero (manual)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "host": "127.0.0.1",
      "port": 2345
    }
  ]
}